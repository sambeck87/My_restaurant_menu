<%= form_with(model: dish, url: dish.persisted? ? restaurant_category_dish_path(dish.category.restaurant_id, dish.category_id, dish) : restaurant_category_dishes_path, html: {class: "flex flex-col items-center w-full"}) do |form| %>
  <% if dish.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(dish.errors.count, "error") %> prohibited this dish from being saved:</h2>
      <ul>
        <% dish.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="mb-9 w-[90%]">
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name, class:"w-full" %>
  </div>
  <div class="mb-9 w-[90%]">
    <%= form.label :price, style: "display: block" %>
    <%= form.text_field :price, class:"w-full" %>
  </div>
  <div class="mb-9 w-[90%]">
    <%= form.label :image, style: "display: block" %>
    <%= form.text_field :image, class:"w-full" %>
  </div>
  <div class="mb-9 w-[90%]">
    <%= form.label :description, style: "display: block" %>
    <%= form.text_area :description, class:"w-full" %>
  </div>
  <div class="mb-9 w-[90%]">
    <%= form.text_field :category_id, value: params[:category_id], class:"w-full" %>
  </div>
  <div>
    <div class="actions  font-montserrat text-sm text-white font-bold bg-red-600 px-2 py-1 rounded border-double border-4 border-orange-500 hover:border-red-600 hover:bg-orange-300">
      <%= form.submit %>
    </div>
    <%= link_to "Back to dishes", restaurant_category_dishes_path, class: "font-montserrat text-xs text-white font-bold bg-red-600 px-2 py-1 rounded border-double border-4 border-orange-500 hover:border-red-600 hover:bg-orange-300" %>
  </div>
<% end %>
