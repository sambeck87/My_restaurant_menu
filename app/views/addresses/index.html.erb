<h1>Addresses</h1>

<div id="addresses">
  <% @addresses.each do |address| %>
    <%= render address %>
    <p>
      <%= link_to "Show this address", restaurant_address_path(address.restaurant_id, address.id) %>
    </p>
  <% end %>
</div>

